<%- include('../partials/head') -%>

 
<%- include('../partials/nav') -%>


<div class="container">
  <div class="row">
      <div class='col-md-3'></div>
      <div class="col-md-6">
          <div class="login-box well">
                  <form action="/login" method="POST">
                      <h3>Log In</h3>
                      <div class="form-group">
                          <label for="username-email">Username</label>
                          <input   type="text" name="username" id="username-email" placeholder="Username" class="form-control" />
                      </div>
                      <div class="form-group">
                          <label for="password">Password</label>
                          <input type="password"  name="password" id="password"  placeholder="Password"  class="form-control" />
                      </div>
                     
                      <div class="form-group">
                          <input type="submit" class="pattern-button" value="Login" />
                      </div>
                      <p class="regis-google"><a href="/auth/google">Sign In with Google</a></p>
                      <p class="regis-google"><a href="/register">Create an account</a></p>
                    
                  </form>
              
          </div>
      </div>
      <div class='col-md-3'></div>
  </div>
</div>




