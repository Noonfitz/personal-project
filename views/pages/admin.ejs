<%- include('../partials/head') -%>

 
<%- include('../partials/nav') -%>

<div class="background-page">
    <div class="admin-content">
       
        <h1>ADMIN PAGE</h1>
        <button  type="submit" name="addnew" class= "centered-button report-section" ><a class="create-link" href = "/admin/report-pet">Report a Lost/Found Pet</a></button><br>
        <button  type="submit" name="logout" class= "centered-button" ><a class="create-link" href = "/">Logout</a></button>
        
       

        <table class="table table-hover ">
          <thead>
            <tr>
             
              <th scope="col">PET BREED</th>
              <th scope="col">STATUS</th>
              <th scope="col">DATE</th>
              <th scope="col" class="edit-center">EDIT</th>
              <th scope="col"class ="delete-center">DELETE</th>
            </tr>
          </thead>
          <tbody>
        
           

        
            <% for (pet of adminPet) { %>
                <tr>
                 
                   <td><%= pet.breed %></td>
                   <td class="found-lost <%= pet.type === 'Found' ? 'change-yellow': 'change-red'%>"><%= pet.type %></td>
                   <td><%= pet.date %></td>
            
                   <td>
                      <button type="submit" name ="edit" ><a class="edit-link" href ="/admin/update/<%= pet._id %>">EDIT</a></button>
                      
                     
                   </td>
            
                   <td>
                     <form action ="/search/<%= pet._id %>?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded">
                        <button type="submit" name ="delete" >DELETE</button>
                     </form>
                   </td>
                  
                </tr>
            
                 <%  } %>


        
        
        
          </tbody>
        </table>








        
        </div>

    </div>


    <%- include('../partials/footer') -%>